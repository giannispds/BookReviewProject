@model IEnumerable<BookReviews.Models.Dto.BookListItemDto>
@{
    ViewData["Title"] = "Manage Books";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2>Manage Books</h2>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Public List</a>
    </div>
</div>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th style="width:30%">Title</th>
            <th style="width:25%">Author</th>
            <th style="width:10%">Year</th>
            <th style="width:20%">Genre</th>
            <th class="text-end" style="width:15%">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.PublishedYear</td>
                <td>@b.Genre</td>
                <td class="text-end">
                    <a asp-controller="Book" asp-action="Edit"asp-route-id="@b.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    